//Start
async function startProgram() {


//Bolt will say Start across the LED's
//Driver: Justin Ryland
//Navigator: Andrew Caruso
    await speak('Start', true);
    await scrollMatrixText('START', { r: 0, g: 0, b: 255 }, 30, true);


//Red
//Bolts LED will turn Red
//Driver: Andrew Caruso
//Navigator: Justin Ryland
	await setMainLed({ r: 255, g: 0, b: 0 });



//Forward and turn 90 degrees and forward again
//Driver: Justin Ryland
//Navigator: Andrew Caruso
	await roll(0, 200, 2);
	await roll(0, 0, 1);
	await spin(90,1);
	await roll(90, 0, 1);
	await roll(90, 200, 2);


//Play Sound
//Driver: Andrew Caruso
//Navigator: Justin Ryland
	await Sound.Animal.Monkey.play(true)


//Figure Eight
//Driver: Justin Ryland
//Navigator: Andrew Caruso
	async function figureEight() {
		const speed = 100;
		const radius = 50;
		const angle = 360;
		const time = 4000;

	   while (true) {
		     await arc(speed, -radius, angle, time);
		     await arc(speed, radius, angle, time);


		}
	}

	figureEight();

//Star
//Driver: Justin Ryland
//Navigator: Andrew Caruso


//End Program
}
